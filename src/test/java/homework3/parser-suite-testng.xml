<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Parser Suite" verbose="1" configfailurepolicy="continue">
    <listeners>
        <listener class-name="homework3.listener.MyListenerTestNgTest"></listener>
    </listeners>
    <test name="test for parser">
        <groups>
            <run>
                <include name="parser"/>
            </run>
        </groups>
        <classes>
            <class name="homework3.parser.XMLTagTest"/>
            <class name="homework3.parser.ValidXMLParserTest"/>
            <class name="homework3.parser.InvalidXmlParserTest"/>
        </classes>
    </test>
</suite>